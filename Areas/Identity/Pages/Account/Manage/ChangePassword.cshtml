@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Парольни ўзгартириш";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}


<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-12">
        <form  class="kru custom-validation" id="change-password-form" method="post">
            <div class="kru-form-container">
                <h4>@ViewData["Title"]</h4>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.OldPassword">Жорий пароль</label>
                    <input asp-for="Input.OldPassword" class="form-control" />
                    <span class="invalid-feedback"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.NewPassword">Янги пароль</label>
                    <input asp-for="Input.NewPassword" class="form-control" />
                    <span class="invalid-feedback"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword">Янги паролни тасдиқланг</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span class="invalid-feedback"></span>
                </div>
            </div>
            <div class="form-button-container">
                <button type="submit" class="btn btn-primary">Парольни ўзгартириш</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}