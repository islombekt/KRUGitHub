@model KRU.Models.Empl_Selected_Option

@{
    ViewData["Title"] = "Edit";
    int sel = ViewBag.Select;
    int emp = ViewBag.Empl;
    int tst = ViewBag.Tst;
}

<div class="card box-shadow card-simple-form card-small">
    <h1>Таҳрирлаш</h1>
    <h4>Текширув ҳисоботи</h4>
    <hr />
    <div class="row">
        <div class="col-12">
            <form asp-action="Edit" asp-route-id="@sel">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="SelectedId" />
                <div class="form-group">
                    <label asp-for="EmployeeId" class="control-label">Ҳодим</label>
                    <select asp-for="EmployeeId" class="form-control disabled" asp-items="ViewBag.EmployeeId"></select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TestId" class="control-label">Тест</label>
                    <select asp-for="TestId" class="form-control disabled" asp-items="ViewBag.TestId"></select>
                    <span asp-validation-for="TestId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="QuestionId" class="control-label">Савол</label>
                    <select asp-for="QuestionId" class="form-control" asp-items="ViewBag.QuestionId"></select>
                    <span asp-validation-for="QuestionId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OptionId" class="control-label">Вариант</label>
                    <select asp-for="OptionId" class="form-control" asp-items="ViewBag.OptionId"></select>
                    <span asp-validation-for="OptionId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" asp-controller="Empl_Selected_Option" asp-route-Empl="@emp" asp-route-test="@tst">Ортга қайтиш</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
