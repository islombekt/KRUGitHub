@model KRU.Models.Question

@{
    ViewData["Title"] = "Create";
    int tst = ViewBag.test;
}

<div class="card box-shadow card-simple-form card-small">
    <h1>Яратиш</h1>

    <h4>Савол</h4>
    <hr />

    <div class="row">
        <div class="col-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="TestId" />
              
                <div class="form-group">
                    <label asp-for="QName" class="control-label">Савол</label>
                    <input asp-for="QName" class="form-control" />
                    <span asp-validation-for="QName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="QWeight" class="control-label">Қийинлик даражаси</label>
                    <input asp-for="QWeight" class="form-control" value="1" />
                    <span asp-validation-for="QWeight" class="text-danger"></span>
                </div>
                @*<div class="form-group">
                        <label asp-for="TestId" class="control-label"></label>
                        <select asp-for="TestId" class="form-control" asp-items="ViewBag.TestId"></select>
                    </div>*@
                <div class="form-button-container">
                    <a class="btn btn-outline-primary mr-3 no-outline" asp-controller="Tests" asp-action="Details" asp-route-id="@tst">
                        <i class="fas fa-arrow-left mr-2"></i>Ортга қайтиш
                    </a>
                    <input type="submit" value="Яратиш" class="btn btn-primary" />
                </div>
            </form>
        </div>

    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
