@model KRU.Models.FileHistory

@{
    ViewData["Title"] = "Delete";
}
<div class="card box-shadow card-simple-form">
    <h1>Ўчириш</h1>

    <h3>Ҳақиқатан ҳам ўчиришни хоҳлайсизми?</h3>
    <div>
        <h4>Асос</h4>
    
        <table class="table table-hover">
            <tbody>
                <tr>
                    <td>Асос номи</td>
                    <td>@Html.DisplayFor(model => model.Name)</td>
                </tr>
                <tr>
                    <td>Файл</td>
                    <td>@Html.DisplayFor(model => model.FileUrl)</td>
                </tr>
                <tr>
                    <td>Тавсиф</td>
                    <td>@Html.DisplayFor(model => model.Description)</td>
                </tr>
                <tr>
                    <td>Бошланиш санаси</td>
                    <td>@Html.DisplayFor(model => model.FileStart)</td>
                </tr>
                <tr>
                    <td>Тугаш санаси</td>
                    <td>@Html.DisplayFor(model => model.FileEnd)</td>
                </tr>

                <tr>
                    <td>Тур номи</td>
                    <td>@Html.DisplayFor(model => model.Task_Type.NameType)</td>
                </tr>
                <tr>
                    <td>Якунланган</td>
                    <td>@Html.DisplayFor(model => model.FileFinished)</td>
                </tr>
            </tbody>

        </table>
        <form asp-action="Delete">
            <div class="form-button-container">
                <input type="hidden" asp-for="FileId" />
                <a class="btn btn-outline-primary mr-3 no-outline" asp-action="Index">
                    <i class="fas fa-arrow-left mr-2" ></i>Ортга қайтиш
                </a>
                <input type="submit" value="Ўчириш" class="btn btn-outline-danger kru-table-button" />
            </div>
        </form>
    </div>
</div>