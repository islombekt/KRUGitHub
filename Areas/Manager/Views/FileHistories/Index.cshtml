@model IEnumerable<KRU.Models.FileHistory>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="buttons-container">
    <a class="btn btn-default" asp-action="Create"><i class="fas fa-plus mr-2"></i>Create New</a>
</div>

<div class="card">
    <div class="card-body">
        <table id="example1" class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FileUrl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FileStart)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FileEnd)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Task_Type.NameType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FileFinished)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @if (item.FileUrl == "" || item.FileUrl == null)
                        {
                            <a>Файл отсутсвует</a>
                        }
                        else
                        {

                                <a asp-area="Manager" asp-controller="FileHistories" asp-action="Download_Config" asp-route-FileId="@item.FileId"> @Html.DisplayFor(modelItem => item.FileUrl)</a>

                                @*@Html.DisplayFor(modelItem => item.FileUrl)*@
                                }
                        </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FileStart)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FileEnd)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Task_Type.NameType)
                    </td>
                    <td>
                        @if (item.FileFinished == true)
                        {
                            <a>закрыт</a>
                        }
                        @if (item.FileFinished == false)
                        {
                            <a>Не закрыт</a>
                        }
                    </td>
                    <td class="table-button-container">
                        <a data-bs-toggle="tooltip" title="Edit" class="btn btn-outline-success kru-table-button" asp-action="Edit" asp-route-id="@item.FileId"><i class="far fa-edit"></i></a>
                        <a data-bs-toggle="tooltip" title="Details" class="btn btn-outline-info kru-table-button" asp-action="Details" asp-route-id="@item.FileId"><i class="fas fa-info"></i></a>
                        <a data-bs-toggle="tooltip" title="Delete" class="btn btn-outline-danger kru-table-button" asp-action="Delete" asp-route-id="@item.FileId"><i class="far fa-trash-alt"></i></a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>
