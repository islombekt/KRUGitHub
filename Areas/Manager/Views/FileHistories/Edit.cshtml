@model KRU.Models.FileHistory

@{
    ViewData["Title"] = "Edit";
}

<div class="card box-shadow card-simple-form card-small">
    <h1>Таҳрирлаш</h1>

    <h4>Асос</h4>
    <hr />
    <div class="row">
        <div class="col-12">
            <form class="kru custom-validation" asp-action="Edit">
                <div class="kru-form-container-small">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="FileId" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Асос номи</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FileUrl" class="control-label">Файл</label>
                        <input asp-for="FileUrl" class="form-control" />
                        <span asp-validation-for="FileUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Тавсиф</label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FileStart" class="control-label">Бошланиш санаси</label>
                        <input asp-for="FileStart" class="form-control" />
                        <span asp-validation-for="FileStart" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FileEnd" class="control-label">Тугаш санаси</label>
                        <input asp-for="FileEnd" class="form-control" />
                        <span asp-validation-for="FileEnd" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TaskTypeId" class="control-label">Тур номи</label>
                        <select asp-for="TaskTypeId" class="form-control" asp-items="ViewBag.TaskTypeId"></select>
                        <span asp-validation-for="TaskTypeId" class="text-danger"></span>
                    </div>
<!--                    <div class="form-group form-check">-->
<!--                        <label class="form-check-label">-->
<!--                            <input class="form-check-input" asp-for="FileFinished" /> @Html.DisplayNameFor(model => model.FileFinished)-->
<!--                        </label>-->
<!--                    </div>-->
                    <div class="form-group">
                        <label class="form-check-label">
                            <div class="icheck-primary d-inline">
                                <input type="checkbox" id="checkboxPrimary1" asp-for="FileFinished" /> Якунланган
                                <label for="checkboxPrimary1">
                                </label>
                            </div>
                        </label>
                    </div>

                </div>
                <div class="form-button-container">
                    <a class="btn btn-outline-primary mr-3 no-outline" asp-action="Index">
                        <i class="fas fa-arrow-left mr-2" ></i>Ортга қайтиш
                    </a>
                    <input type="submit" value="Сақлаш" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
