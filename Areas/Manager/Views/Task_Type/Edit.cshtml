@model KRU.Models.Task_Type

@{
    ViewData["Title"] = "Edit";
}
<div class="card box-shadow card-simple-form card-small">
    <h1>Таҳрирлаш</h1>

    <h4>Тур</h4>
    <hr />
    <div class="row">
        <div class="col-12">
            <form class="kru" asp-action="Edit">
                <div class="kru-form-container-small">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="TaskTypeID" />
                    <div class="form-group">
                        <label asp-for="NameType" class="control-label">Тур номи</label>
                        <input asp-for="NameType" class="form-control" />
                        <span asp-validation-for="NameType" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-button-container">
                    <a class="btn btn-outline-primary mr-3 no-outline" asp-action="Index">
                        <i class="fas fa-arrow-left mr-2" ></i>Ортга қайтиш
                    </a>
                    <input type="submit" value="Сақлаш" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
