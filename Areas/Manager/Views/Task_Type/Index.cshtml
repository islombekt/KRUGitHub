@model IEnumerable<KRU.Models.Task_Type>

@{
    ViewData["Title"] = "Index";
}

<h1>Турлар</h1>
<div class="buttons-container">
    <a class="btn btn-default" asp-action="Create"><i class="fas fa-plus mr-2"></i>Яратиш</a>
</div>

<div class="card">
    <div class="card-body">
        <table id="example1" class="table table-hover">
            <thead>
                <tr>
                    <th>
                        Тур номи
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NameType)
                    </td>
                    <td class="table-button-container">
                        <a data-bs-toggle="tooltip" title="Таҳрирлаш" class="btn btn-outline-success kru-table-button" asp-action="Edit" asp-route-id="@item.TaskTypeID"><i class="far fa-edit"></i></a>
                        <a data-bs-toggle="tooltip" title="Тафсилотлар" class="btn btn-outline-info kru-table-button" asp-action="Details" asp-route-id="@item.TaskTypeID"><i class="fas fa-info"></i></a>
                        <a data-bs-toggle="tooltip" title="Ўчириш" class="btn btn-outline-danger kru-table-button" asp-action="Delete" asp-route-id="@item.TaskTypeID"><i class="far fa-trash-alt"></i></a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>
