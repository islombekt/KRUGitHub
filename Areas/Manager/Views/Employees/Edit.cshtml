@model KRU.Models.Employee

@{
    ViewData["Title"] = "Edit";
}
<div class="card box-shadow card-simple-form card-small">
    <h1>Таҳрирлаш</h1>
    <h4>Ходим: @Model.User.FullName</h4>
    <hr />
    <div class="row">
        <div class="col-12">
            <form class="kru custom-validation" asp-action="Edit">
                <div class="kru-form-container-small">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="EmployeeId" />
                    <input type="hidden" asp-for="UserId" />

                    <div class="form-group">
                        <label class="control-label">Ҳолат</label>
                        <div class="input-group">
                            <select asp-for="EmployeeState" class="form-control">
                                <option selected disabled>Ҳолатни танланг</option>
                                <option value="working">Ишда</option>
                                <option value="out">Ишдан бўшатилди</option>

                            </select>
                        </div>
                        <span class="invalid-feedback"></span>
    <!--                        <span asp-validation-for="EmployeeState" class="text-danger"></span>-->
                    </div>

                    <div class="form-group">
                        <label asp-for="ManagerId" class="control-label">Раҳбар</label>
                        <select asp-for="ManagerId" class="form-control" asp-items="ViewBag.ManagerId"></select>
                        <span asp-validation-for="ManagerId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-button-container">
                    <a class="btn btn-outline-primary mr-3 no-outline" asp-action="Index">
                        <i class="fas fa-arrow-left mr-2"></i>Ортга қайтиш
                    </a>
                    <input type="submit" value="Сақлаш" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
