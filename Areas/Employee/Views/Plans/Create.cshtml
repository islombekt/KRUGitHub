@model KRU.Models.Plan

@{
    ViewData["Title"] = "Create";
}

<div class="card box-shadow card-simple-form card-small">
    <h1>Ҳисобот яратиш</h1>
    <h4>План</h4>
    <hr />
    <div class="row">
        <div class="col-12">
            <form class="kru custom-validation" id="app" asp-action="Create">
                <div class="kru-form-container-small status-kru">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group ">
                        <label class="control-label">Бошланиш санаси</label>
                        <input asp-for="PlanStart" class="form-control" />
                        <span class="invalid-feedback"></span>
                    </div>
                    <div class="form-group ">
                        <label class="control-label">Тугаш санаси</label>
                        <input asp-for="PlanEnd" class="form-control" />
                        <span class="invalid-feedback"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Ҳолат</label>
                        <select id="status" asp-for="State" class="form-control">
                            <option selected></option>
                            <option value="8">На работе</option>
                            <option value="7">День до праздника (7)</option>
                            <option value="К">Командировка</option>
                            <option value="У">На Учебе</option>
                            <option value="Уд">Удаленка</option>
                            <option value="О">Отпуск</option>
                            <option value="Б">Больничный</option>
                            <option value="Пр">Праздник</option>
                            <option value="б/с">Отпуск без сохранения заработной платы</option>
                        </select>
                        <span class="invalid-feedback"></span>
                    </div>
                    <div id="parentAddress" class="form-group ">
                        <label class="control-label">Адрес</label>
                        <select asp-for="AddressId" id="address" onchange="javascript: $('#submit').click();" class="select2 form-control" asp-items="ViewBag.AddressId"></select>
                    </div>
                    <div id="object" class="form-group ">
                        <label class="control-label">Объект</label>
                        <select asp-for="ObjectId" id="object1" class="select2 form-control" asp-items="ViewBag.ObjectId"></select>
                    </div>
                    <div id="parentTask" class="form-group ">
                        <label class="control-label">Вазифа</label>
                        <select asp-for="TaskId" class="select2 form-control" asp-items="ViewBag.TaskId"></select>
                    </div>
                    <div class="form-group ">
                        <label class="control-label">Тавсиф</label>
                        <input asp-for="PlanDescription" class="form-control" />
                        <span class="invalid-feedback"></span>
                    </div>
                </div>
                <div class="form-button-container">
                    <a class="btn btn-outline-primary mr-3 no-outline" asp-action="Index">
                        <i class="fas fa-arrow-left mr-2" ></i>Ортга қайтиш
                    </a>
                    <button id="submit" type="submit" name="submit" value="Submit" asp-action="CreateAfterAddress" hidden></button>
                    <input type="submit" value="Яратиш" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

