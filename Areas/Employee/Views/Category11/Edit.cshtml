@model KRU.Models.Category11

@{
    ViewData["Title"] = "Edit";
}
<div class="card box-shadow card-simple-form card-small">
    <h1>Таҳрирлаш</h1>
    <h4>Категория х.х</h4>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form class="kru custom-validation" asp-action="Edit">
                <div class="kru-form-container-small">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Category11Id" />
                    <div class="form-group">
                        <label asp-for="Name_C11" class="control-label">Категория номи</label>
                        <input asp-for="Name_C11" class="form-control" />
                        <span asp-validation-for="Name_C11" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category1Id" class="control-label">Юқори категория</label>
                        <select asp-for="Category1Id" class="select2 form-control" asp-items="ViewBag.Category1Id"></select>
                        <span asp-validation-for="Category1Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-button-container">
                    <a class="btn btn-outline-primary mr-3 no-outline" asp-controller="Category1" asp-action="Details" asp-route-id="@Model.Category1Id">
                        <i class="fas fa-arrow-left mr-2"></i>Ортга қайтиш
                    </a>
                    <input type="submit" value="Сақлаш" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
