                    <tr>
                        <th>

                            @Html.DisplayNameFor(model => model.Category111s)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Category111s)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item11 in Model.Category111s)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item11.Name_C111)
