                                    <a asp-controller="FinanceReports" asp-action="Edit" asp-route-id="@item111.FinanceRepId">Edit</a> |
                                    <a asp-controller="FinanceReports" asp-action="Details" asp-route-id="@item111.FinanceRepId">Details</a> |
                                    <a asp-controller="FinanceReports" asp-action="Delete" asp-route-id="@item111.FinanceRepId">Delete</a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>

            </dd>
        }

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Category11Id" />
        @if (Model.Count111 == 0 && Model.FinCount == 0)
        {<input type="submit" value="Delete" class="btn btn-danger" />}

        <a asp-controller="Category1" asp-action="Delete" asp-route-id="@Model.Category1Id">Back to List</a>
