            <dd class="col-sm-12" style="overflow-x:scroll;">
                <table class="table table-bordered text-center">
                    <thead class="table-active">
                        <tr>
                            <th>

                                @Html.DisplayNameFor(model => model.FinanceReports)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>


                        @foreach (var item111 in Model.FinanceReports)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item111.amount)
                                </td>
