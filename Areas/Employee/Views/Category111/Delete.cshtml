@model KRU.Models.Category111

@{
    ViewData["Title"] = "Delete";
}

<div class="callout callout-warning">
<h5><i class="fas fa-info"></i> Delete:</h5>
    Are you sure you want to delete this?
</div>
<div class="invoice p-3 mb-3">
    <h4>Category111</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name_C111)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name_C111)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category11)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category11.Category11Id)
        </dd>
        <dt class="col-sm-2">
            SubCategory:


        </dt>


        <dd class="col-sm-12" style="overflow-x:scroll;">
            <table class="table table-bordered text-center">
                <thead class="table-active">
                    <tr>
                        <th>

                            @Html.DisplayNameFor(model => model.FinanceReports)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.FinanceReports == null)
                    {
                    <td>
                        ничего не найдено
                    </td>
                }
                else
                {
                    @foreach (var item111 in Model.FinanceReports)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item111.amount)
                            </td>
                            <td>
                                <a asp-controller="Category111" asp-action="Edit" asp-route-id="@item111.Category111Id">Edit</a> |
                                <a asp-controller="Category111" asp-action="Details" asp-route-id="@item111.Category111Id">Details</a> |
                                <a asp-controller="Category111" asp-action="Delete" asp-route-id="@item111.Category111Id">Delete</a>
                            </td>
                        </tr>

                    }}
                    </tbody>
                </table>

            </dd>
        </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Category111Id" />
        @if (Model.FinCount == 0)
        {
            <input type="submit" value="Delete" class="btn btn-danger" />}
        <a asp-controller="Category11" asp-action="Delete" asp-route-id="@Model.Category11.Category11Id">Back to 11</a>
    </form>
    </div>
