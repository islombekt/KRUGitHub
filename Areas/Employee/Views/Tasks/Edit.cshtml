@model KRU.Models.Tasks

@{
    ViewData["Title"] = "Edit";
}

<div class="card box-shadow card-simple-form card-small">
    <h1>Таҳрирлаш</h1>

    <h4>Топшириқ</h4>
    <div class="row">
        <div class="col-md-12">
            <form class="kru custom-validation" method="post" enctype="multipart/form-data" asp-area="Employee" asp-controller="Tasks" asp-action="Edit">
                <div class="kru-form-container-small">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="TaskId" />
                    <input type="hidden" asp-for="DepartmentId" />
                    <input type="hidden" asp-for="MasulEmplId" />
                    <input type="hidden" asp-for="File" />
                    <div class="form-group">
                        <label asp-for="TaskName" class="control-label">Топшириқ номи</label>
                        <input asp-for="TaskName" class="form-control" />
                        <span asp-validation-for="TaskName" class="text-danger"></span>
                        <span class="invalid-feedback"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SumLost" class="control-label">Ёъқотилган маблағ</label>
                        <input asp-for="SumLost" class="form-control" />
                        <span asp-validation-for="SumLost" class="text-danger"></span>
                        <span class="invalid-feedback"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SumGain" class="control-label">Ортирилган маблағ</label>
                        <input asp-for="SumGain" class="form-control" />
                        <span asp-validation-for="SumGain" class="text-danger"></span>
                        <span class="invalid-feedback"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Comment" class="control-label">Изоҳ</label>
                        <input asp-for="Comment" class="form-control" />
                        <span asp-validation-for="Comment" class="text-danger"></span>
                        <span class="invalid-feedback"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="TaskStarted" class="control-label">Бошланиш санаси</label>
                        <input asp-for="TaskStarted" class="form-control" />
                        <span class="invalid-feedback"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TaskEnd" class="control-label">Тугаш санаси</label>
                        <input asp-for="TaskEnd" class="form-control" />
                        <span class="invalid-feedback"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="TaskTypeId" class="control-label">Вазифа тури</label>
                        <select asp-for="TaskTypeId" class="form-control" asp-items="ViewBag.TaskTypeId"></select>
                        <span asp-validation-for="TaskTypeId" class="text-danger"></span>
                        <span class="invalid-feedback"></span>
                    </div>

                    <div class="form-group" id="fileSelect">
                        <label>Асосларни танланг</label>
                        <select id="ListFile" name="ListofFiles" asp-for="selectedFiles" class="select2" multiple="multiple" data-placeholder="Файлларни танланг" style="width:100%;" asp-items="ViewBag.File"></select>
                        <span asp-validation-for="File" class="text-danger"></span>
                        <span class="invalid-feedback"></span>
                    </div>
                    <div class="form-group" id="fileSelect">
                        <label>Ходимларни танланг</label>
                        <select id="ListEmp" name="ListofEmpl" asp-for="selectedEmployees" class="select2" multiple="multiple" data-placeholder="Ходимларни танланг" style="width:100%;" asp-items="ViewBag.Emp"></select>
                        <span class="text-danger"></span>
                        <span class="invalid-feedback"></span>
                    </div>
                    <div class="form-group flex-container align-items-end">
                        <label class="form-check-label">
                            <label>
                                Якунланди
                            </label>
                            <div class="icheck-primary d-inline">
                                <input type="checkbox" id="checkboxPrimary1" asp-for="Finished" />
                                <label for="checkboxPrimary1">
                                </label>
                            </div>
                        </label>
                    </div>
                    <div id="fileselect2" class="form-group input-group mt-2" style="display:none;">
                        <div class="upload-files input-group-prepend">
                            <span class="input-group-text" id="inputGroupFileAddon01">
                                <i class="fas fa-upload"></i>
                            </span>
                        </div>

                        <div class="custom-file">
                            <input name="file" type="file" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
                            <label class="custom-file-label" for="inputGroupFile01">@if (Model.File == null)
                            {
                                <a>Файл танланг</a>  
                            }
                            else
                            {
                                @Model.File
                            }</label>
                        </div>
                    </div>
                </div>
                <div class="form-button-container">
                    <a class="btn btn-outline-primary mr-3 no-outline" asp-action="Index">
                        <i class="fas fa-arrow-left mr-2"></i>Ортга қайтиш
                    </a>
                    <input type="submit" value="Сақлаш" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        //Initialize Select2 Elements
        $(document).ready(function () {
            $('.select2').select2()
            if ($("#checkboxPrimary1").attr('checked')) {
                $("#fileselect2").css({ display: 'flex' });
            }
            $("#checkboxPrimary1").click(function () {
                if ($(this).prop('checked')) {
                    $("#fileselect2").css({ display: 'flex' });
                } else {
                    $("#fileselect2").css({ display: 'none' });
                }
            });
            $("#inputGroupFile01").change(function () {
                const curObj = $(this);
                const fileName = curObj.val().split("\\").pop();
                const fileLabel = curObj.siblings("label");
                fileLabel.text(fileName);
            });
        });



    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
