@model IEnumerable<KRU.Models.Tasks>

@{
    ViewData["Title"] = "Index";
}
<div id="PlaceHolderHere"></div>
<div class="callout callout-info">
    <div class="flex-container align-items-center">
        <i class="fas fa-info-circle"></i><h5>Топшириқлар:</h5>
    </div>
    Бу ердан сиз 'Топшириқлар' ҳақида ма'лумот олишингиз мумкун.
</div>
@*<div class="buttons-container">
    <a class="btn btn-default" asp-action="Create"><i class="fas fa-plus mr-2"></i>Create New</a>
</div>*@
<div class="card">
    <div class="card-body">
        <table id="example2" class="table table-hover">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Топшириқ
                    </th>

                    <th>
                        Асос
                    </th>
                    <th>
                        Бошланиш санаси
                    </th>
                    <th>
                        Тугаш санаси
                    </th>
                    <th>
                        Департамент
                    </th>
                    <th>
                        Вазифа тури
                    </th>
                    <th>
                        Бириктирилган ходим
                    </th>
                    
                    <th>
                        Изоҳ
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                var className = item.Finished ? "table-success" : "";
                    <tr class="@className">
                        @*@{ var number = string.Concat("T", item.TaskId.ToString());}*@
                        <td>
                            <a asp-area="Employee" asp-controller="Tasks" asp-action="ExcelSp" asp-route-id="@item.TaskId" type="button" class="btn btn-outline-secondary">
                                @*@Html.DisplayFor(modelItem => number)*@
                                <i class="fas fa-angle-double-down"></i>
                            </a>
                            
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TaskName)
                        </td>

                        <td class="file-link">
                            @foreach (var i in item.Task_Files)
                            {
                                @if (i.FileHistory.FileUrl == "" || i.FileHistory.FileUrl == null)
                                {
                                    @Html.DisplayFor(modelItem => i.FileHistory.Name)
                                }
                                else
                                {
                                    <a asp-area="Employee" asp-controller="Tasks" asp-action="Download_Config"
                                       asp-route-FileId="@i.FileHistory.FileId">
                                        @Html.DisplayFor(modelItem => i.FileHistory.Name)
                                    </a>}
                                <br />
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TaskStarted)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TaskEnd)
                         </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Department.DepartmentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Task_Type.NameType)
                        </td>
                        <td>
                            @foreach (var i in item.Task_Emples)
                            {
                                <span># </span>
                                @Html.DisplayFor(modelItem => i.Employee.User.FullName)
                                <br />
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Comment)
                        </td>
                        <td class="table-button-container">
                            @*<a data-bs-toggle="tooltip" title="Таҳрирлаш" class="btn btn-outline-success kru-table-button" asp-action="Edit" asp-route-id="@item.TaskId"><i class="far fa-edit"></i></a>*@
                            <a data-bs-toggle="tooltip" title="Тафсилотлар" data-toggle="ajax-modal" data-target="#addEmployee" class="addEmployeeButton btn btn-outline-info kru-table-button" data-url="@Url.Action("Details", "Tasks", new { id = item.TaskId }, null)"><i class="fas fa-info"></i></a>
                            @*<a data-bs-toggle="tooltip" title="Ўчириш" class="btn btn-outline-danger kru-table-button" asp-action="Delete" asp-route-id="@item.TaskId"><i class="far fa-trash-alt"></i></a>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>