@model IEnumerable<KRU.Models.Report>

@{
    ViewData["Title"] = "Index";
}
<div id="PlaceHolderHere"></div>
<div class="callout callout-info">
    <div class="flex-container align-items-center">
        <i class="fas fa-info-circle"></i><h5>Кундалик ҳисобот:</h5>
    </div>
    Бу ердан сиз кунлик ҳисоботларига киришингиз, ўчиришингиз ва таҳрирлашингиз мумкин.
</div>

<div class="buttons-container">
    <a class="btn btn-default" asp-action="Create"><i class="fas fa-plus mr-2"></i>Ҳисобот яратиш </a>
</div>

<div class="card">
    <div class="card-body" style="overflow-x:scroll;">
        <table id="example2" class="table table-hover">
            <thead>
                <tr>
                    <th>
                        Адрес
                    </th>
                    <th>
                        Объект
                    </th>
                    <th>
                        Вазифа
                    </th>
                    <th>
                        Ҳолат
                    </th>
                    <th>
                        Сана
                    </th>
                    <th>
                        Тавсиф
                    </th>

                    <th>
                        Менеджер
                    </th>
                    <th>
                        Изоҳ
                    </th>
                    <th>
                        Балл
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var className = item.HaveSeen ? "" : "table-warning";
                    <tr class="@className">
                        <td>
                            @Html.DisplayFor(modelItem => item.Address.Building)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Objects.ObjectName)
                        </td>
                        <td>
                            @if (item.Tasks != null)
                            {
                                @Html.DisplayFor(modelItem => item.Tasks.TaskName)
                            }
                            @foreach (var t in item.Task_Reports)
                            {
                                <span># </span>
                                @Html.DisplayFor(modelItem => t.Tasks.TaskName)
                                <br />
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReportDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReportDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Manager.User.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReportComment)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReportScore)
                        </td>
                        <td class="table-button-container">
                            @if (item.HaveSeen == false)
                            {
                                <a data-bs-toggle="tooltip" title="Таҳрирлаш" class="btn btn-outline-success kru-table-button" asp-action="Edit" asp-route-id="@item.ReportId"><i class="far fa-edit"></i></a>
                                <a data-bs-toggle="tooltip" title="Ўчириш" class="btn btn-outline-danger kru-table-button" asp-action="Delete" asp-route-id="@item.ReportId"><i class="far fa-trash-alt"></i></a>
                            }
                            else
                            {
                                <a data-bs-toggle="tooltip" title="Таҳрирлаш" class="btn btn-outline-success kru-table-button disabled" asp-action="Edit" asp-route-id="@item.ReportId"><i class="far fa-edit"></i></a>
                                <a data-bs-toggle="tooltip" title="Ўчириш" class="btn btn-outline-danger kru-table-button disabled" asp-action="Delete" asp-route-id="@item.ReportId"><i class="far fa-trash-alt"></i></a>
                            }
                            <a data-bs-toggle="tooltip" title="Тафсилотлар" data-toggle="ajax-modal" data-target="#addEmployee" class="addEmployeeButton btn btn-outline-info kru-table-button" data-url="@Url.Action("Details", "Reports", new { id = item.ReportId }, null)"><i class="fas fa-info"></i></a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<p id="demo"></p>
<p id="demo1"></p>
<div class="buttons-container">
    <a class="btn btn-info" onclick="getLocation()"><i class="fas fa-check mr-2"></i>Ишга келдим</a>
</div>
<script>

    var x = document.getElementById("demo");
    function getLocation() {
        var kechqoldi = 2;
        if (navigator.appVersion.indexOf("Win") == -1) {
            var today = new Date();
          
            var time = today.getHours() + ":" + today.getMinutes() + ":" + today.getSeconds();
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(showPosition);
            } else {
                x.innerHTML = "Geolocation is not supported by this browser.";
            }



            function showPosition(position) {
                x.innerHTML = "Latitude: " + position.coords.latitude +
                    "<br>Longitude: " + position.coords.longitude;
                console.log("agessr");
                const lat = position.coords.latitude;
                const lon = position.coords.longitude;
                const R = 3958.8;
                var dLat = deg2rad(lat - 41.3334781);
                var dLon = deg2rad(lon - 69.3420491);
                var a =
                    Math.sin(dLat / 2) * Math.sin(dLat / 2) +
                    Math.cos(deg2rad(position.coords.latitude)) * Math.cos(deg2rad(41.3334781)) *
                    Math.sin(dLon / 2) * Math.sin(dLon / 2)
                    ;
                var c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1 - a));
                var d = R * c; // Distance in km
                console.log(d + " km");
                var x1 = document.getElementById("demo1");
                x1.innerHTML = d + " km";
                if ((today.getHours() > 9 || today.getMinutes() > 16) && d > 1.25) {
                    alert(`Ishga yetb bormadingiz`)
                    kechqoldi = 1;
                }
                else if ((today.getHours() > 9 || today.getMinutes() > 16) && d < 1.25) {
                    alert(`Oz vohtida kelmadingiz`)
                    kechqoldi = 1;
                }
                else {
                    alert(`Zor`)
                }
                console.log(today.getHours() + " соат");
                console.log(today.getMinutes() + " минут");
                $.ajax({
                    type: "POST",
                    url: "/Employee/Reports/AjaxMethod",
                    data: { "name": kechqoldi },
                    success: function (response) {
                       
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });
            }
           
        }
        else {
            alert(`Компьютердан ташлаш мумкин эмас. Телефонингиздан ташланг`)
        }
        function deg2rad(deg) {
            return deg * (Math.PI / 180)
        }
    }
</script>