@model IEnumerable<KRU.Models.Address>

@{
    ViewData["Title"] = "Index";
}

<h3>Бу йердан биноларни бошқаришингиз мумкун</h3>

<p> 
    <a class="mb-2 mr-2 btn-transition btn btn-outline-info" asp-action="Create">
        <i class="fas fa-plus"></i>
        &nbsp;Янги бино
    </a>
</p>
<a class="mb-2 mr-2 btn-transition btn btn-outline-info" asp-area="Admin" asp-controller="Objects" asp-action="Index">
   
    &nbsp; Барча объектлар
</a>
<table class="table">
    <thead>
        <tr>
            <th>
                Здание            
            </th>
            <th>
                Город
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Building)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AddressId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AddressId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AddressId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
