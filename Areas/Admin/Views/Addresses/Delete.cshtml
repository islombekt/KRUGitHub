    ViewData["Title"] = "Delete";
}

<div class="card box-shadow card-simple-form">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Address</h4>
        <hr />
        <table class="table table-hover">
            <tbody>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Building)</td>
