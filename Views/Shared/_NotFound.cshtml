@model int
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{ Layout = null;}

<!doctype html>
<html class="no-js" lang="">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>415</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- favicon
        ============================================ -->
    <link rel="shortcut icon" type="image/x-icon" href="img/favicon.ico">
    <!-- Google Fonts
        ============================================ -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,700,900" rel="stylesheet">
    <!-- Bootstrap CSS
        ============================================ -->
    <link rel="stylesheet" href="~/register/css/bootstrap.min.css">
    <!-- font awesome CSS
        ============================================ -->
    <link rel="stylesheet" href="~/register/css/font-awesome.min.css">

    <!-- animate CSS
        ============================================ -->
    <link rel="stylesheet" href="~/register/css/animate.css">

    <!-- Notika icon CSS
        ============================================ -->
    <link rel="stylesheet" href="~/register/css/notika-custom-icon.css">
    <!-- main CSS
        ============================================ -->
    <link rel="stylesheet" href="~/register/css/main.css">
    <!-- style CSS
        ============================================ -->
    <link rel="stylesheet" href="~/register/style.css">
    <!-- responsive CSS
        ============================================ -->
    <link rel="stylesheet" href="~/register/css/responsive.css">
    <!-- dropzone JS
        ============================================ -->
    <link rel="stylesheet" href="~/lib/dropzone/dist/dropzone.css">

</head>

<body>
    <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
    <!-- 404 Page area Start-->
    <div class="error-page-area">
        <div class="error-page-wrap">
            <i class="notika-icon notika-close" style="color:#00BCD4"></i>
            <h2>Ошибка <span class="counter" style="color:#00BCD4">404</span></h2>
            <p>
                Файл не правильно выбран
            </p>
            <a asp-action="Contacts" class="btn" style="background-color:#00BCD4">назад</a>
            @*<a asp-controller="Requests" asp-action="Dashboard" class="btn error-btn-mg" style="background-color:#00BCD4">АСОСИЙ ОЙНА</a>*@
        <button type="button" class="btn " data-toggle="modal" data-target="#myModaltwo" style="background-color:#00BCD4">выберить файл</button>
        </div>
    </div>
    <div class="modal fade" id="myModaltwo" role="dialog">
        <div class="modal-dialog modal-sm nk-cyan">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form asp-action="Upload_Config" asp-area="HeadManager" asp-controller="Workers" asp-route-workerId="@Model"
                          method="post" class="dropzone" id="my-awesome-dropzone" enctype="multipart/form-data">
                        <div class="fallback">
                            <input type="file" name="file" />
                        </div>
                    </form>
                </div>
                @*<div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Save changes</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>*@
            </div>
        </div>
    </div>
    <!-- 404 Page area End-->
    <!-- jquery
        ============================================ -->
    <script src="~/register/js/vendor/jquery-1.12.4.min.js"></script>
    <!-- bootstrap JS
        ============================================ -->
    <script src="~/register/js/bootstrap.min.js"></script>
    <!-- wow JS
        ============================================ -->
    <script src="~/register/js/wow.min.js"></script>

    <!-- counterup JS
        ============================================ -->
    <script src="~/register/js/counterup/jquery.counterup.min.js"></script>
    <script src="~/register/js/counterup/waypoints.min.js"></script>
    <script src="~/register/js/counterup/counterup-active.js"></script>

    <!-- dropzone JS
        ============================================ -->
    <script src="~/lib/dropzone/dist/dropzone.js"></script>
    <script src="~/register/js/wow.min.js"></script>
    <!-- main JS
        ============================================ -->
    <script src="~/register/js/main.js"></script>

</body>



</html>




<script>

    // "myAwesomeDropzone" is the camelized version of the HTML element's ID
    Dropzone.options.myAwesomeDropzone = {
        paramName: "file", // The name that will be used to transfer the file
        maxFilesize: 4, // MB
        maxFiles: 1,
        dictDefaultMessage: "@Html.Raw(Localizer["here"].Value.ToString())",

        acceptedFiles: ".doc, .docx, .pdf",
        dictInvalidFileType: "@Html.Raw(Localizer["only"].Value.ToString())"
    }

</script>