<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KRU</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />*@
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/theme/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/theme/dist/css/adminlte.min.css">
    <link href="~/theme/plugins/datatables-autofill/css/autoFill.bootstrap4.min.css" rel="stylesheet" />
    @*<link href="~/register/css/jquery.dataTables.min.css"  rel="stylesheet">*@
    <link href="~/theme/plugins/select2/css/select2.min.css" rel="stylesheet">
    <link href="~/theme/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css" rel="stylesheet">
    <link href="~/theme/plugins/icheck-bootstrap/icheck-bootstrap.min.css" rel="stylesheet">
    <link href="~/theme/plugins/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/theme/plugins/dropzone/min/dropzone.min.css">
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <header class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="navbar-toggler-icon"></i></a>
                </li>


            </ul>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <partial name="_LoginPartial" />
            </div>
        </nav>
        <aside class="main-sidebar elevation-4 sidebar-dark-blue">
            <!-- Brand Logo -->
            <!-- Sidebar -->
            <div class="sidebar">
                <a class="brand-link" style="width:200px">
                    <img src="~/images/Logotype-UzbekNefteGaz-.png" style="max-width:250px; height:30px; margin-left :2px">
                </a>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item has-treeview">
                                <a href="#" class="nav-link">
                                    @*<img class="nav-icon" src="~/image/4.png" />*@
                                    <i class="nav-icon fas fa-user-friends"></i>
                                    <p>
                                        Ходим
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="Admin" asp-controller="Users" asp-action="Index">
                                            @*<img class="nav-icon" src="~/image/19.png" />*@
                                            <p>Работают</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="Admin" asp-controller="Users" asp-action="Index">
                                            @*<img class="nav-icon" src="~/image/18.png" />*@
                                            <p>Уволены</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item has-treeview">
                                <a asp-area="Admin" asp-controller="Departments" asp-action="Index" class="nav-link">
                                    @*<img class="nav-icon" src="~/image/4.png" />*@
                                    <i class="nav-icon fas fa-sitemap"></i>
                                    <p>
                                        Департамент
                                    </p>
                                </a>

                            </li>
                            <li class="nav-item has-treeview">
                                <a asp-area="Admin" asp-controller="Addresses" asp-action="Index" class="nav-link">
                                    @*<img class="nav-icon" src="~/image/4.png" />*@
                                    <i class="nav-icon fas fa-building"></i>
                                    <p>
                                        Адрес
                                    </p>
                                </a>

                            </li>
                        }
                        @if (User.IsInRole("Manager"))
                        {
                            <li class="nav-item has-treeview">
                                <a asp-area="Manager" asp-controller="Reports" asp-action="Index" class="nav-link">
                                    @*<img class="nav-icon" src="~/image/4.png" />*@
                                    <i class="nav-icon fas fa-clipboard-list"></i>
                                    <p>
                                        Кунлик отчёт
                                    </p>
                                </a>

                            </li>
                            <li class="nav-item has-treeview">
                                <a asp-area="Manager" asp-controller="Plans" asp-action="Index" class="nav-link">
                                    @*<img class="nav-icon" src="~/image/4.png" />*@
                                    <i class="nav-icon fas fa-calendar-alt"></i>
                                    <p>
                                        План
                                    </p>
                                </a>

                            </li>
                            <li class="nav-item has-treeview">
                                <a asp-area="Manager" asp-controller="Tasks" asp-action="Index" class="nav-link">
                                    @*<img class="nav-icon" src="~/image/4.png" />*@
                                    <i class="nav-icon fas fa-tasks"></i>
                                    <p>
                                        Топшириқлар
                                    </p>
                                </a>

                            </li>
                            <li class="nav-item has-treeview">
                                <a asp-area="Manager" asp-controller="Employees" asp-action="Index" class="nav-link">
                                    @*<img class="nav-icon" src="~/image/4.png" />*@
                                    <i class="nav-icon fas fa-user-friends"></i>
                                    <p>
                                        Ходимлар
                                    </p>
                                </a>

                            </li>
                            <li class="nav-item has-treeview">
                                <a asp-area="Manager" asp-controller="FileHistories" asp-action="Index" class="nav-link">
                                    @*<img class="nav-icon" src="~/image/4.png" />*@
                                    <i class="nav-icon fas fa-file-alt"></i>
                                    <p>
                                        Документлар
                                    </p>
                                </a>

                            </li>
                            <li class="nav-item has-treeview">
                                <a asp-area="Manager" asp-controller="Task_Type" asp-action="Index" class="nav-link">
                                    @*<img class="nav-icon" src="~/image/4.png" />*@
                                    <i class="nav-icon fas fa-print"></i>
                                    <p>
                                        Типы
                                    </p>
                                </a>

                            </li>
                        }
                        @if (User.IsInRole("Employee"))
                        {
                            <li class="nav-item has-treeview">
                                <a asp-area="Employee" asp-controller="Reports" asp-action="Index" class="nav-link">
                                    @*<img class="nav-icon" src="~/image/4.png" />*@
                                    <i class="nav-icon fas fa-clipboard-list"></i>
                                    <p>
                                        Кунлик отчёт
                                    </p>
                                </a>

                            </li>
                            <li class="nav-item has-treeview">
                                <a asp-area="Employee" asp-controller="Plans" asp-action="Index" class="nav-link">
                                    @*<img class="nav-icon" src="~/image/4.png" />*@
                                    <i class="nav-icon fas fa-calendar-alt"></i>
                                    <p>
                                        План
                                    </p>
                                </a>

                            </li>
                        }
                    </ul>

                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>
    </header>
    <div class="content-wrapper">
        <section class="content">
            <div class="container-fluid">

                @RenderBody()
            </div>
        </section>
    </div>

    <footer class="main-footer margin-top">
        <div class="float-lg-right d-none d-sm-block">
            <b>Version</b> 1.0.0
        </div>
        <strong>Copyright &copy; 2020 <a href="http://www.ung.uz/">Узбекнефтегаз</a>.</strong> All rights
        reserved.
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="~/theme/plugins/datatables/jquery.dataTables.min.js"></script>

    <!-- jQuery -->
    @*<script src="~/theme/plugins/jquery/jquery.min.js"></script>*@
    <script src="~/theme/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Select2 -->
    <script src="~/theme/plugins/select2/js/select2.full.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/theme/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/theme/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/theme/dist/js/demo.js"></script>
    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>*@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
